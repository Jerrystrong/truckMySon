                            <% 
                                const nameParts = user.userName ? user.userName.trim().split(' ') : [];
                                const initials = nameParts.slice(0, 3).map(n => n[0]?.toUpperCase() || '').join('');
                            %>
                            <%= initials %>
                        </div>
                        <div class="text-slate-700 relative">
                            <small class="absolute -top-3 -right-1">0</small>
                            <i class="fa-solid fa-bell"></i>
                        </div>
                    </div>
